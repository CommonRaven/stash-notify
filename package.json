{
    "name": "stash-notify",
    "version": "1.0.0",
    "description": "Stash Pull Request Notifier",
    "private": true,
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "xo": "./node_modules/.bin/xo",
        "shx": "./node_modules/.bin/shx",
        "travis": "npm run xo"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CommonRaven/stash-notify.git"
    },
    "author": "Nitai J. Perez <nitai.perez@gmail.com> (https://github.com/NitaiPerez)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CommonRaven/stash-notify/issues"
    },
    "homepage": "https://github.com/CommonRaven/stash-notify#readme",
    "devDependencies": {
        "shx": "^0.1.2",
        "xo": "^0.16.0"
    },
    "xo": {
        "semicolon": true,
        "space": 4,
        "overrides": [
            {
                "files": "test/*.js",
                "esnext": true,
                "space": 3
            },
            {
                "files": "test/foo.js",
                "esnext": false
            }
        ],
        "rules": {
            "max-params": [
                0,
                5
            ],
            "linebreak-style": [
                1,
                "windows"
            ]
        },
        "ignores": [
            "src/lib/**/*",
            "src/services/stash.service.old.js"
        ],
        "globals": [
            "window",
            "localStorage",
            "chrome",
            "_",
            "moment",
            "later",
            "crosstab",
            "md5",
            "angular",
            "app",
            "ga",
            "host",
            "errHandle"
        ]
    }
}
